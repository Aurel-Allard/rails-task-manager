<h1>Today's Tasks</h1>
<ul>
  <% @tasks.each do |task| %>
  <p>
    <input type="checkbox" <%= "checked" if task.completed %>>
    <%= link_to task.title, task_path(task) %>
    <%= link_to "- Delete", task_path(task), method: :delete %>
  </p>
  <% end %>
  <p>
    <%= link_to "Add a new task", new_task_path %>
  </p>
</ul>
